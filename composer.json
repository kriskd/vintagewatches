{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "Stripe",
                "type": "cakephp-plugin",
                "version": "2.0.3",
                "source": {
                    "url": "https://github.com/chronon/CakePHP-StripeComponent-Plugin",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "Datasources",
                "type": "cakephp-plugin",
                "version": "2.3",
                "source": {
                    "url": "https://github.com/cakephp/datasources",
                    "type": "git",
                    "reference": "origin/2.3"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "HtmlPurifier",
                "type": "cakephp-plugin",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/kriskd/HtmlPurifier",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "zeroasterisk/CakePHP-ArrayToXml-Lib",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/zeroasterisk/CakePHP-ArrayToXml-Lib",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        }
    ],
    "require": {
        "composer/installers": "dev-master",
        "mjohnson/uploader": "4.*",
        "cakephp/debug_kit": "2.2.*",
        "Stripe": "2.0.3",
        "stripe/stripe-php": "1.16.*",
        "Datasources": "2.3",
        "HtmlPurifier": "dev-master",
        "chronon/mobile_detect": "1.1.0",
        "zeroasterisk/CakePHP-ArrayToXml-Lib": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "burriko/cake-faker": "2.0.*@dev"
    },
    "config": {
        "vendor-dir": "Vendor"
    },
    "extra": {
        "installer-paths": {
            "Plugin/Stripe/Vendor/Stripe": ["stripe/stripe-php"]
        }
    }
}
